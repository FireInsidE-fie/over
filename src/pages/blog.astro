---
import BaseLayout from '../layouts/BaseLayout.astro';

const allPosts = Object.values(import.meta.glob('./posts/*.md', {eager: true }));

const pageTitle = "Blog of Ash";
---

<BaseLayout pageTitle={pageTitle}>
  <!-- Dynamic list of all .md posts -->
  <h2>List of posts</h2>
  <ul>
    {
      allPosts
        .map(
        (post: any) =>
          <li><a href={post.url}>{post.frontmatter.pubDate.toString().slice(0,10)} -- {post.frontmatter.title}</a></li>
        )
        .reverse()
    }
  </ul>
</BaseLayout>
