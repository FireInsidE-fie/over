---
import BaseLayout from '../layouts/BaseLayout.astro';

// Get all .md posts in the posts directory
const allPosts = Object.values(import.meta.glob('./posts/*.md', {eager: true }));

const pageTitle = "Blog of Ash";
---

<BaseLayout pageTitle={pageTitle}>
  <p>This is where all my posts talking about stuff that interests me regarding my learning will go.</p>

  <!-- Dynamic list of all .md posts -->
  <ul>
    {
      allPosts
        .map(
        (post: any) =>
          <li><a href={post.url}>{post.frontmatter.pubDate.toString().slice(0,10)} -- {post.frontmatter.title}</a></li>
        )
        .reverse()
    }
  </ul>
</BaseLayout>
